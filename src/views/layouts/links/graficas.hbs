      <span class="eje" id="ejext">X: </span> <span class="eje" id="ejex"></span>
      <span class="eje" id="ejeyt">Y: </span> <span class="eje" id="ejey"></span>
      <span class="eje" id="ejezt">Z: </span> <span class="eje" id="ejez"></span>
